# -*- coding: utf-8 -*-


ScreenManager:
    PainterScreen:






<PainterScreen>:
    name: "painter"
    md_bg_color: app.theme_cls.surfaceColor
    MDBoxLayout:
        orientation: 'horizontal'
        MDBoxLayout:
            orientation: 'horizontal'
            on_touch_down: root.on_image1_down(args[1])
            on_touch_move: root.on_image1_move(args[1])
            on_touch_up: root.on_image1_up(args[1])
            id: main_canvas
            cv_color: (1, 1, 1, 1)
            canvas:
                Color:
                    rgba: self.cv_color
                Rectangle:
                    pos: self.pos
                    size: self.size
        


